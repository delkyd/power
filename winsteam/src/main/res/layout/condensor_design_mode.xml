<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:input="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />
	<com.example.winsteam.DataInputControl
                        android:id="@+id/condensor_pressure"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        input:text="@string/quality"
                        input:type="press" />
	<com.example.winsteam.DataInputControl
                        android:id="@+id/condensor_heat_duty"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                       
                        input:text="@string/quality"
                        input:type="energy" />
	<com.example.winsteam.DataInputControl
                        android:id="@+id/circulating_water_flow"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                       
                        input:text="@string/quality"
                        input:type="quality" />
	<com.example.winsteam.DataInputControl
                        android:id="@+id/circulating_water_inlet_temp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        
                        input:text="@string/quality"
                        input:type="temp" />
	<com.example.winsteam.DataInputControl
                        android:id="@+id/tube_water_velocity"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        
                        input:text="@string/quality"
                        input:type="temp" />
	<com.example.winsteam.DataInputControl
                        android:id="@+id/cleanliness_factor"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        
                        input:text="@string/quality"
                        input:type="-" />
	<com.example.winsteam.DataInputControl
                        android:id="@+id/cleanliness_factor"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                       
                        input:text="@string/quality"
                        input:type="-" />
	
	
</LinearLayout>
